<script type="text/javascript">
	$(document).ready(function(){
	    $("#schBtn").click(function(){
	       search();
	    });
	    $(".sch").keyup(function(){
	       if(event.keyCode==13){
	          search()
	       }
	    })
	 });
	 function search(){
	    $.ajax({
	       url:"${path}/salgradeAjax.do",
	       type:"post",
	       data:$("#frm01").serialize(),
	       dataType:"json",
	       success:function(data){
	          console.log(data)
	          var sal = data.sal
	          var show=""
	          $(sal).each(function(idx,s){
	             show+="<tr ondblclick='goPage("+s.grade+")'>"
	             show+="<td>"+s.grade+"</td>"
	             show+="<td>"+s.losal+"</td>"
	             show+="<td>"+s.hisal+"</td>"
	             show+="</tr>"
	          })
	          $("#tab01 tbody").html(show)
	       },
	       error:function(err){
	          console.log(err)
	       }
	    })      
	 }
	 function goPage(grade){
	    $.ajax({
	       url:"${path}/getSalgrade.do",
	       type:"get",
	       data:"grade="+grade,
	       dataType:"json",
	       success:function(data){
	          var info=data.salgradeInfo
	          $("#modal01").click() // 모달 로딩
	          $("#frm02 [name=grade]").val(info.grade)
	          $("#frm02 [name=losal]").val(info.losal)
	          $("#frm02 [name=hisal]").val(info.hisal)
	       },
	       error:function(err){
	          console.log(err)
	       }
	    })
	 }
</script>
</head>

